@model SCPSInventory.Models.Inventory

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this inventory?</h3>
<div>
    <h4>Inventory</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.InventoryId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InventoryId)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.ccId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ccId)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.InventoryStartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InventoryStartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InventoryEndDate)
        </dt>

        <dd>
            @if (Model.Status == SCPSInventory.Models.InventoryStatus.Closed)
            {
                @Html.DisplayFor(model => model.InventoryEndDate);
            }
            else
            {
                @Html.Raw("-");
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.numAssetsToInventory)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numAssetsToInventory)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.numAssetsInventoried)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numAssetsInventoried)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }

    <div>
        @Html.ActionLink("Back to Inventory List", "List", new { id = Model.ccId })
    </div>
</div>
