@model IEnumerable<SCPSInventory.Models.CostCenter>

@{
    ViewBag.Title = "Cost Center List";
}

@using System.Collections.Generic;

<h2>Cost Center List</h2>
<p>
    @Html.ActionLink("Create New Cost Center", "Create")
</p>

@{
    List<SelectListItem> ccSelectList = new List<SelectListItem>();
}

<table class="table table-hover">
    <thead>
